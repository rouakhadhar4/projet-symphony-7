{% if not post.tags.empty %}
    <div class="post-tags" style="margin-top: 10px;">
        {% for tag in post.tags %}
            <a href="{{ path('blog_index', {'tag': tag.name == app.request.query.get('tag') ? null : tag.name}) }}"
               class="btn btn-sm btn-{{ tag.name == app.request.query.get('tag') ? 'primary' : 'danger' }}"
               style="margin-right: 5px; background-color: {% if tag.name == app.request.query.get('tag') %}#007bff{% else %}#dc3545{% endif %}; border-color: {% if tag.name == app.request.query.get('tag') %}#007bff{% else %}#dc3545{% endif %}; color: #fff;"
            >
                <i class="fa fa-tag"></i> {{ tag.name }}
            </a>
        {% endfor %}
    </div>
{% endif %}



